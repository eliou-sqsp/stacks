{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015.promise",
      "es6"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },

  "include": [
    "./src/common/**/*.ts",
    "./src/server/**/*.ts"
  ]
}
